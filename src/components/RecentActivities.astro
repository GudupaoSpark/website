---
import { getTranslator } from '@gudupao/astro-i18n';
const lang = Astro.params.lang || 'en';
const t = getTranslator(lang);
---

<section id="recent-activities">
	<h2>{t('recentActivities.title')}</h2>
	<div class="activity-image">
		<img src="/activity/hero.png" alt={t('recentActivities.title')} />
	</div>
	<p class="activity-info">{t('recentActivities.description')}</p>
</section>

<style>
	#recent-activities {
		padding: 80px 20px;
		text-align: center;
		background: #f8f9fa;
		margin: 0;
		min-height: 120vh;
		position: relative;
		box-shadow: 0 -10px 30px -15px rgba(0,0,0,0.3);
		z-index: 5;
		transform: translateZ(0);
		margin-top: calc(100vh - 100px);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	:global(.dark) #recent-activities {
		background: #1a1a1a;
	}

	#recent-activities h2 {
		color: #333;
		font-size: 48px;
		margin-bottom: 40px;
		font-family: 'ZiKuJiangHuGuFengTi', Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
	}

	:global(.dark) #recent-activities h2 {
		color: #fff;
	}

	.activity-image {
		background: white;
		border-radius: 16px;
		padding: 20px;
		display: inline-block;
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.activity-image:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
	}

	.activity-info {
		color: #666;
		font-size: 18px;
		line-height: 1.8;
		margin-top: 30px;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
		padding: 0 20px;
	}

	:global(.dark) .activity-info {
		color: #aaa;
	}

	.activity-image img {
		width: 700px;
		max-width: 90vw;
		height: auto;
		border-radius: 8px;
	}

	@media screen and (max-width: 768px) {
		#recent-activities {
			padding: 60px 20px;
			min-height: 100vh;
		}

		#recent-activities h2 {
			font-size: 32px;
			margin-bottom: 24px;
		}

		.activity-info {
			font-size: 16px;
			margin-top: 20px;
		}

		.activity-image img {
			width: 100%;
			max-width: 450px;
	}
	}
</style>

