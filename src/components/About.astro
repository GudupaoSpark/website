---
import { getTranslator } from '@gudupao/astro-i18n';
const lang = Astro.params.lang || 'en';
const t = getTranslator(lang);
---

<section id="about">
	<div class="about-container">
		<div class="about-header">
			<h1>{t('about.title')}</h1>
			<p class="subtitle">{t('about.subtitle')}</p>
		</div>

		<div class="content-section">
			<div class="section-card story">
				<h2>{t('about.story.title')}</h2>
				<p>{t('about.story.content')}</p>
			</div>

			<div class="section-card mission">
				<h2>{t('about.mission.title')}</h2>
				<p>{t('about.mission.content')}</p>
			</div>
		</div>

		<div class="values-section">
			<h2>{t('about.values.title')}</h2>
			<div class="values-grid">
				<div class="value-card">
					<div class="value-icon">üí°</div>
					<h3>{t('about.values.innovation')}</h3>
					<p>{t('about.values.innovationDesc')}</p>
				</div>
				<div class="value-card">
					<div class="value-icon">üî•</div>
					<h3>{t('about.values.passion')}</h3>
					<p>{t('about.values.passionDesc')}</p>
				</div>
				<div class="value-card">
					<div class="value-icon">ü§ù</div>
					<h3>{t('about.values.collaboration')}</h3>
					<p>{t('about.values.collaborationDesc')}</p>
				</div>
				<div class="value-card">
					<div class="value-icon">‚≠ê</div>
					<h3>{t('about.values.integrity')}</h3>
					<p>{t('about.values.integrityDesc')}</p>
				</div>
			</div>
		</div>

		<div class="content-section">
			<div class="section-card team">
				<h2>{t('about.team.title')}</h2>
				<p>{t('about.team.content')}</p>
			</div>

			<div class="section-card journey">
				<h2>{t('about.journey.title')}</h2>
				<p>{t('about.journey.content')}</p>
			</div>
		</div>
	</div>
</section>

<style>
	@font-face {
		font-family: 'ZiKuJiangHuGuFengTi';
		src: url('/fonts/ZiKuJiangHuGuFengTi-2.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
	}

	#about {
		min-height: 100vh;
		padding: 120px 20px 80px;
		background: #f8f9fa;
	}

	:global(.dark) #about {
		background: #0f172a;
	}

	.about-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.about-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.about-header h1 {
		font-family: 'ZiKuJiangHuGuFengTi', Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		font-size: 56px;
		color: #333;
		margin: 0 0 20px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	:global(.dark) .about-header h1 {
		background: linear-gradient(135deg, #a78bfa 0%, #c084fc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.subtitle {
		font-size: 20px;
		color: #666;
		margin: 0;
	}

	:global(.dark) .subtitle {
		color: #94a3b8;
	}

	.content-section {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 30px;
		margin-bottom: 60px;
	}

	.section-card {
		background: white;
		border-radius: 16px;
		padding: 40px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.section-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
	}

	:global(.dark) .section-card {
		background: #1e293b;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
	}

	:global(.dark) .section-card:hover {
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
	}

	.section-card h2 {
		font-size: 28px;
		color: #333;
		margin: 0 0 20px;
		font-weight: 600;
	}

	:global(.dark) .section-card h2 {
		color: #f1f5f9;
	}

	.section-card p {
		font-size: 16px;
		line-height: 1.8;
		color: #666;
		margin: 0;
	}

	:global(.dark) .section-card p {
		color: #cbd5e1;
	}

	.values-section {
		margin-bottom: 60px;
	}

	.values-section > h2 {
		text-align: center;
		font-size: 36px;
		color: #333;
		margin: 0 0 40px;
		font-weight: 600;
	}

	:global(.dark) .values-section > h2 {
		color: #f1f5f9;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 24px;
	}

	.value-card {
		background: white;
		border-radius: 16px;
		padding: 32px 24px;
		text-align: center;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.value-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
	}

	:global(.dark) .value-card {
		background: #1e293b;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
	}

	:global(.dark) .value-card:hover {
		box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
	}

	.value-icon {
		font-size: 48px;
		margin-bottom: 16px;
	}

	.value-card h3 {
		font-size: 22px;
		color: #333;
		margin: 0 0 12px;
		font-weight: 600;
	}

	:global(.dark) .value-card h3 {
		color: #f1f5f9;
	}

	.value-card p {
		font-size: 15px;
		line-height: 1.6;
		color: #666;
		margin: 0;
	}

	:global(.dark) .value-card p {
		color: #cbd5e1;
	}

	@media screen and (max-width: 768px) {
		#about {
			padding: 100px 20px 60px;
		}

		.about-header {
			margin-bottom: 60px;
		}

		.about-header h1 {
			font-size: 36px;
		}

		.subtitle {
			font-size: 16px;
		}

		.content-section {
			grid-template-columns: 1fr;
			gap: 20px;
			margin-bottom: 40px;
		}

		.section-card {
			padding: 30px 24px;
		}

		.section-card h2 {
			font-size: 24px;
		}

		.values-section {
			margin-bottom: 40px;
		}

		.values-section > h2 {
			font-size: 28px;
			margin-bottom: 30px;
		}

		.values-grid {
			grid-template-columns: 1fr;
			gap: 16px;
		}

		.value-icon {
			font-size: 40px;
		}
	}
</style>
