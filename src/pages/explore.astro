---
import Layout from '../layouts/Layout.astro';
import { getTranslator } from '@gudupao/astro-i18n';
const lang = Astro.params.lang || 'en';
const t = getTranslator(lang);
---

<Layout title={t('explore.page_title')}>
	<section id="explore">
		<div class="explore-container">
			<div class="explore-content">
				<div class="construction-icon">
					<svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
						<path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
					</svg>
				</div>
				<h1 class="explore-title">{t('explore.title')}</h1>
				<p class="explore-subtitle">{t('explore.subtitle')}</p>
				<div class="coming-soon">
					<p>{t('explore.coming_soon')}</p>
					<p>{t('explore.stay_tuned')}</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

<script>
	document.addEventListener('astro:page-load', () => {
		// Page loaded
	});
</script>

<style>

	#explore {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 20px;
	}

	:global(.dark) #explore {
		background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
	}

	.explore-container {
		max-width: 800px;
		width: 100%;
		text-align: center;
	}

	.explore-content {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-radius: 24px;
		padding: 60px 40px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		animation: fadeInUp 0.8s ease forwards;
	}

	:global(.dark) .explore-content {
		background: rgba(30, 41, 59, 0.95);
		color: #f1f5f9;
	}

	.construction-icon {
		color: #667eea;
		margin-bottom: 30px;
		animation: bounce 2s infinite;
	}

	:global(.dark) .construction-icon {
		color: #a78bfa;
	}

	.explore-title {
		font-size: 48px;
		font-weight: bold;
		color: #333;
		margin: 0 0 20px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	:global(.dark) .explore-title {
		background: linear-gradient(135deg, #a78bfa 0%, #c084fc 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.explore-subtitle {
		font-size: 24px;
		color: #666;
		margin: 0 0 40px;
		font-weight: 300;
	}

	:global(.dark) .explore-subtitle {
		color: #94a3b8;
	}

	.coming-soon {
		font-size: 18px;
		color: #888;
		line-height: 1.6;
	}

	:global(.dark) .coming-soon {
		color: #cbd5e1;
	}

	.coming-soon p {
		margin: 10px 0;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% {
			transform: translateY(0);
		}
		40% {
			transform: translateY(-10px);
		}
		60% {
			transform: translateY(-5px);
		}
	}

	@media screen and (max-width: 768px) {
		#explore {
			padding: 20px;
		}

		.explore-content {
			padding: 40px 20px;
		}

		.explore-title {
			font-size: 36px;
		}

		.explore-subtitle {
			font-size: 20px;
		}

		.construction-icon svg {
			width: 80px;
			height: 80px;
		}
	}
</style>