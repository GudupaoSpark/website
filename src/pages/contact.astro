<script>
	document.addEventListener('astro:page-load', () => {
		const linkCards = document.querySelectorAll('.link-card');

		linkCards.forEach((card, index) => {
			const cardElement = card as HTMLElement;

			// Add fade-in animation with delay
			setTimeout(() => {
				cardElement.style.opacity = '1';
				cardElement.style.transform = 'translateY(0)';
			}, index * 150);

			// Add hover effect
			cardElement.addEventListener('mouseenter', () => {
				const arrow = cardElement.querySelector('.link-arrow') as HTMLElement;
				if (arrow) {
					arrow.style.transform = 'translateX(4px)';
				}
			});

			cardElement.addEventListener('mouseleave', () => {
				const arrow = cardElement.querySelector('.link-arrow') as HTMLElement;
				if (arrow) {
					arrow.style.transform = 'translateX(0)';
				}
			});
		});

		// Email card animation
		const emailCard = document.querySelector('.email-card') as HTMLElement;
		if (emailCard) {
			setTimeout(() => {
				emailCard.style.opacity = '1';
				emailCard.style.transform = 'translateY(0)';
			}, 200);
		}
	});
</script>

<style>
	@font-face {
		font-family: 'ZiKuJiangHuGuFengTi';
		src: url('/fonts/ZiKuJiangHuGuFengTi-2.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
	}

	#contact {
		min-height: 100vh;
		padding: 120px 20px 80px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		position: relative;
		overflow: hidden;
	}

	:global(.dark) #contact {
		background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%);
	}

	#contact::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.1)"/><circle cx="90" cy="40" r="0.5" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
		pointer-events: none;
	}

	.contact-container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	/* Email Section */
	.email-section {
		margin-bottom: 80px;
	}

	.email-card {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(20px);
		border-radius: 24px;
		padding: 40px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
		display: flex;
		align-items: center;
		justify-content: space-between;
		opacity: 0;
		transform: translateY(30px);
		transition: all 0.6s ease;
	}

	:global(.dark) .email-card {
		background: rgba(30, 41, 59, 0.95);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.email-icon {
		flex-shrink: 0;
		color: #667eea;
		transition: transform 0.3s ease;
	}

	:global(.dark) .email-icon {
		color: #a78bfa;
	}

	.email-card:hover .email-icon {
		transform: scale(1.1);
	}

	.email-content {
		flex: 1;
		margin-left: 30px;
	}

	.email-content h2 {
		font-size: 32px;
		font-weight: 600;
		color: #333;
		margin: 0 0 10px;
	}

	:global(.dark) .email-content h2 {
		color: #f1f5f9;
	}

	.email-address {
		font-size: 24px;
		font-weight: 500;
		color: #667eea;
		margin: 0 0 20px;
		font-family: 'Courier New', monospace;
	}

	:global(.dark) .email-address {
		color: #a78bfa;
	}

	.email-link {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-decoration: none;
		padding: 14px 28px;
		border-radius: 25px;
		font-weight: 500;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
	}

	.email-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
	}

	/* Links Section */
	.links-section {
		margin-bottom: 60px;
	}

	.links-title {
		font-size: 28px;
		font-weight: 600;
		color: white;
		text-align: center;
		margin-bottom: 50px;
		text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
	}

	.links-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 24px;
	}

	.link-card {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(20px);
		border-radius: 16px;
		padding: 24px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		transition: all 0.4s ease;
		text-decoration: none;
		display: flex;
		align-items: center;
		opacity: 0;
		transform: translateY(30px);
	}

	:global(.dark) .link-card {
		background: rgba(30, 41, 59, 0.95);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
	}

	.link-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
	}

	:global(.dark) .link-card:hover {
		box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4);
	}

	.link-icon {
		flex-shrink: 0;
		margin-right: 20px;
		transition: transform 0.3s ease;
	}

	.link-card:hover .link-icon {
		transform: scale(1.1);
	}

	/* Platform specific colors */
	.discord-card .link-icon { color: #5865f2; }
	.qq-card .link-icon { color: #12b7f5; }
	.github-card .link-icon { color: #333; }
	.twitter-card .link-icon { color: #000; }
	.bilibili-card .link-icon { color: #00a1d6; }
	.status-card .link-icon { color: #10b981; }

	:global(.dark) .github-card .link-icon,
	:global(.dark) .twitter-card .link-icon {
		color: #f1f5f9;
	}

	.link-content {
		flex: 1;
	}

	.link-content h4 {
		font-size: 20px;
		font-weight: 600;
		color: #333;
		margin: 0 0 6px;
	}

	:global(.dark) .link-content h4 {
		color: #f1f5f9;
	}

	.link-content p {
		font-size: 14px;
		color: #666;
		margin: 0;
		line-height: 1.4;
	}

	:global(.dark) .link-content p {
		color: #94a3b8;
	}

	.link-arrow {
		flex-shrink: 0;
		color: #999;
		transition: transform 0.3s ease;
	}

	:global(.dark) .link-arrow {
		color: #64748b;
	}

	/* Responsive */
	@media screen and (max-width: 768px) {
		#contact {
			padding: 100px 20px 60px;
		}

		.email-card {
			flex-direction: column;
			text-align: center;
			padding: 30px 20px;
		}

		.email-content {
			margin-left: 0;
			margin-top: 20px;
		}

		.email-content h2 {
			font-size: 24px;
		}

		.email-address {
			font-size: 18px;
		}

		.links-title {
			font-size: 24px;
			margin-bottom: 30px;
		}

		.links-grid {
			grid-template-columns: 1fr;
			gap: 16px;
		}

		.link-card {
			padding: 20px;
		}

		.link-content h4 {
			font-size: 18px;
		}
	}
</style>